<body>
  <main>
    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
        <span class="fs-4">Book Keeper</span>
      </a>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="<%= summary_books_path %>" class="nav-link active" aria-current="page">
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
            Home
          </a>
        </li>
        <li>
          <a href="<%= shelf_books_path %>" class="nav-link text-white">
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"/></svg>
            Shelf
          </a>
        </li>
        <li>
          <a href="<%= search_books_path %>" class="nav-link text-white">
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"/></svg>
            Search
          </a>
        </li>
      </ul>
      <hr>
      <div class="dropdown">
        <% if user_signed_in? %>
          <form class="form-inline my-2 my-lg-0">
            <%= link_to "Log out", destroy_user_session_path, :method => :delete, :style => 'color:#66FCF1;' %>
          </form>
        <% else %>
          <form class="form-inline my-2 my-lg-0 navbar-text">
            <%= link_to "Log in", user_session_path, :method => :post, :style => 'color:white;' %>
            <%= link_to "Sign up", new_user_registration_path, :method => :get, :style => 'color:#66FCF1;' %>
          </form>
        <% end %>
      </div>
    </div>
  </main>
</body>
